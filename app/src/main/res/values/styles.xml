<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
    </style>

    <!-- Title appearance style -->
    <style name="TitleDefault">
        <item name="android:padding">18dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/header_background</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>
    <!-- Lead appearance style -->
    <style name="LeadDefault">
        <item name="android:padding">18dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>
    <!-- Default Text appearance style -->
    <style name="TextDefault">
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>
    <!-- More Info Text appearance style -->
    <style name="TextMore">
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>
    <!-- Style for images -->
    <style name="text_images">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- Style for a category -->
    <style name="CategoryStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <!-- Style for a tab that displays a category name -->
    <style name="CategoryTab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabTextAppearance">@style/CategoryTabTextAppearance</item>
    </style>

    <!-- Text appearance style for a category tab -->
    <style name="CategoryTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">#A8A19E</item>
    </style>
</resources>